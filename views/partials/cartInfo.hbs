<h3 style="margin-top: 2em;">Productos en carro:</h3>
<h5>Cantidad: {{sessionCart.products.length}}</h5>
    {{#if sessionCart.products.length}}
    <button onclick="return purchaseCart('{{sessionCart._id}}')" class="btn btn-success">Finalizar Compra</button>
    <button onclick="return deleteAllProducts('{{sessionCart._id}}')" class="btn btn-success">Eliminar Productos</button>
    <div id="tableContainer">
        <table class="table table-dark" id="productTable">
            <tr class="text-warning">
                <th>Titulo</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Imagen</th>
            </tr>
                {{#each sessionCart.products}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{price}}</td>
                    <td>{{quantity}}</td>
                    <td><img style="width: 100px;" src={{image}} alt={{name}}> </td>
                    <td><button onclick="return deleteFromCart('{{_id}}', '{{../sessionCart._id}}')">Quitar</button></td>
                </tr>
                {{/each}}
        </table>
    </div>
    {{/if}}
    {{#unless sessionCart.products.length}}
    <h3 class="alert alert-danger">No hay productos en el carrito!</h3>
    {{/unless}}